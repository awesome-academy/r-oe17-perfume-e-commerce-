<%= form_for(@brand, url: yield(:path), html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <%= f.label :brand_name, class: "col-xs-12 col-sm-3 col-md-2 control-label" %>
    <div class="col-xs-12 col-sm-4 col-md-6">
      <%= f.text_field :brand_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-xs-12 col-sm-3 col-md-2 control-label" %>
    <div class="col-xs-12 col-sm-4 col-md-6">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :country_name, class: "col-xs-12 col-sm-3 col-md-2 control-label" %>
    <div class="col-xs-12 col-sm-4 col-md-6">
      <%= f.text_field :country_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :homepage, class: "col-xs-12 col-sm-3 col-md-2 control-label" %>
    <div class="col-xs-12 col-sm-4 col-md-6">
      <%= f.text_field :homepage, class: "form-control" %>
    </div>
  </div>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
