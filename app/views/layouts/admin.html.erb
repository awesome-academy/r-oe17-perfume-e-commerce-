<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= t "views.layout.admin.title" %></title>
  <%= render "layouts/shim" %>
  <%= render "layouts/admin_default" %>
</head>

<body class="skin-blue sidebar-mini fixed <%= params[:controller].parameterize %> <%= action_name %>">
  <div class="wrapper">

    <%= render partial: "layouts/admin_header" %>

    <%= render partial: "layouts/admin_sidebar" %>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <%= render "layouts/admin_content_header" %>
      <!-- Main content -->
      <section class="content">
        <% if notice %>
          <div class="alert alert-success alert-dismissable">
            <i class="fa fa-check"></i>
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <b><%= notice %></b>
          </div>
        <% end %>

        <% if alert %>
          <div class="alert alert-danger alert-dismissable">
            <i class="fa fa-ban"></i>
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <b><%= alert %></b>
          </div>
        <% end %>
        <%= yield %>
      </section><!-- /.content -->
    </div><!-- /.content-wrapper -->
   <%= render "layouts/admin_footer" %>
  </div><!-- ./wrapper -->
</body>
</html>
